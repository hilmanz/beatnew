<div id="articlePage">
	<div class="blog-content clearfix">
		{if $featarticle}
		<div id="hotArticle" class="article_boxBig">
			<a href="#popup-photography" class="showPopup thumb250 articledetail" contentid="{$featarticle.id}">
							<img src="
							{if $featarticle.video_thumbnail}https://img.youtube.com/vi/{$featarticle.video_thumbnail}/0.jpg
							{else}
								{if $featarticle.image}{$basedomain}public_assets/{$featarticle.imagepath}/{$featarticle.image}
								{else}{$basedomain}assets/content/thumb/default_music.jpg{/if}
							{/if}" width="250" height="250" /></a>
			<div class="pita_rev"></div>
			<div class="isi_boxBig">
				<div class="judul">
					{if $featarticle.fromwho==2}
						<h3><a contentid="{$featarticle.id}" class="showPopup articledetail" href="#popup-photography">{$featarticle.title}</a></h3>
						<span>{$featarticle.author.name|upper}</span>
					{else}
						<h3><a contentid="{$featarticle.id}" class="showPopup articledetail" href="#popup-photography">{$featarticle.title|upper}</a></h3>
						<span>{$featarticle.brief}</span>
					{/if}
				</div>
				{$featarticle.content|truncate:300}
				<div class="boxBottom">
					<div class="content_action">
						<ul>
							<li><abbr title="add favourite"><a class="icon_love count" counttype="favorite" count="{$featarticle.favorite}" contentid="{$featarticle.id}" href="javascript:void(0)">{$featarticle.favorite}</a></abbr></li>
							<li><abbr title="total comment"><a class="icon_comment count" counttype="comment" count="{$featarticle.commentcount}"  contentid="{$featarticle.id}" href="javascript:void(0)">{$featarticle.commentcount}</a></abbr></li>
							<li><abbr title="total view"><a class="icon_view count" counttype="views" count="{$featarticle.views}"  contentid="{$featarticle.id}" href="javascript:void(0)">{$featarticle.views}</a></abbr></li>
						</ul>
					</div><!--END .content_action-->
					{if !$featarticle.video_thumbnail}
						<div class="mp3Player fr">
							{if $featarticle.hasfile}
								 <div class="mp3Player fr">
                                    <audio src="{$basedomain}public_assets/music/mp3/{$featarticle.file}" type="audio/mp3" controls="controls" width="150"></audio>	
                                </div><!-- end .mp3Player -->															
							{/if}
						</div><!-- end .mp3Player -->
					{/if}
				</div><!--END .boxBottom-->
			</div><!--END .isi_boxBig-->
		</div><!--END .article_boxBig-->
		{/if}
		{*}<div  id="main-menu-wrapper" class="clearfix">			
			<ul id="main-menu" class="fl">
				<li><a href="{$basedomain}upload/image" class="hoverslide">Upload Image</a></li>	
				<li><a href="{$basedomain}upload/image" class="hoverslide">Upload Music</a></li>	
				<li><a href="{$basedomain}upload/image" class="hoverslide">Upload Video</a></li>
			</ul>
		</div>
		{/*}
