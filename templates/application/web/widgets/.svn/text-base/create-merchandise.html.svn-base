<div id="theContainer" class="challengePage">
    <div class="theContainer">
        <div class="head-title">
			<a href="{$basedomain}{$pages}" class="btnback fl"></a>
        </div> <!-- /.head-title -->
        <div class="theContent">
			<div class="rows last-child">
				<div class="entry-details">
					<div class="head-title">
						<h1 class="fl">Create Merchandise</h1>
					  
					</div> <!-- /.head-title -->
					<div class="forms">
						<form id="create-badges" METHOD="POST" enctype="multipart/form-data" action="{$basedomain}{$pages}/create">
							<div class="rows">
								<label>Name</label>
								<input type="text" name="name" class="full-width" />
							</div><!-- /.rows -->
							<div class="rows">
								<label>Detail</label>
								<textarea name="desc" class="full-width"></textarea>
							</div><!-- /.rows -->
							<div class="rows">
								<label>Image</label>
								<input type="file" name="merchandise_img" class="full-width" />
							</div><!-- /.rows -->
							
							<div class="rows">
								<label>Stock</label>
								<input type="number" name="stock" class="full-width"/>
							</div><!-- /.rows -->
							<div class="rows">
								<label>Point</label>
								<input type="number" name="point" class="full-width"/>
							</div><!-- /.rows -->
							
							<div class="rows">
                                <label>Merchandise Status</label>
								<select type="text" name="n_status">
									<option value="0" >Unpublish</option>
									<option value="1" >Publish</option>
								</select>
							</div>
							<div class="rows" style="padding-right:103px;">
								<a href="{$basedomain}{$pages}" class="button">Cancel</a>
								<input type="hidden" name="merchandise" value="1"/>
								<input type="submit" value="Save" class="button fr" />
							</div><!-- /.rows -->
						</form>
					</div> <!-- /.forms -->
				</div> <!-- /.entry-details -->
			</div><!-- /.rows -->
        </div> <!-- /.theContent -->
    </div> <!-- /.theContainer -->
</div> <!-- /#theContainer -->